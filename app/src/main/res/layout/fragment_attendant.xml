<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_workmate"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/item_mate_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Nom du collegue"
        android:textColor="#424544"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Nom du collegue" />

    <ImageView
        android:id="@+id/item_mate_photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/btn_dialog" />

    <TextView
        android:id="@+id/item_where_eats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mange Ã  ..."
        android:textColor="#424544"
        app:layout_constraintEnd_toEndOf="@+id/item_mate_name"
        app:layout_constraintStart_toStartOf="@+id/item_mate_name"
        app:layout_constraintTop_toBottomOf="@+id/item_mate_name" />


</androidx.constraintlayout.widget.ConstraintLayout>