<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_settings_rootview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.go4lunchAlx.ui.settings.SettingsFragment"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/textview_sort_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dip"
        android:background="#FF5722"
        android:text="Tri de la liste de restaurants:"
        android:textAlignment="viewStart"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="normal" />

    <Spinner
        android:id="@+id/spinner_sort_list"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="100dp" />

    <TextView
        android:id="@+id/textview_notifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dip"
        android:layout_marginTop="100dp"
        android:background="#FF5722"
        android:text="Notifications:"
        android:textAlignment="viewStart"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="normal" />

    <Switch
        android:id="@+id/switch_notifications"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:text="Envoi de notification journaliÃ¨re"
        android:textColor="#FF5722"
        android:textSize="18sp" />


</LinearLayout>